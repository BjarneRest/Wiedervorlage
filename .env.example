# Email Server Configuration
IMAP_SERVER=imap.example.com
IMAP_PORT=993
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
EMAIL_USERNAME=remind@example.com
EMAIL_PASSWORD=your_password
BASE_DOMAIN=example.com

# Service Settings
CHECK_INTERVAL=60
DEBUG_MODE=false
MAX_RETRIES=3
REMINDERS_FILE=reminders.json

# Language Settings
# Language code (en or de)
LANGUAGE=en
# Optional: Path to custom translations file (JSON)
# CUSTOM_TRANSLATIONS_PATH=translations/custom.json

# Heartbeat Settings (Optional)
# Enable/disable heartbeat monitoring (default: false)
HEARTBEAT_ENABLED=false
# BetterStack heartbeat URL
# HEARTBEAT_URL=https://uptime.betterstack.com/api/v1/heartbeat/XXXXXXXXXXXXXXXXXXXXXX
# Heartbeat interval in seconds (default: same as CHECK_INTERVAL)
# HEARTBEAT_INTERVAL=60
